# ========================================
# PAYLOADCMS BACKEND OTOMATIS - ENV VARIABLES
# ========================================

# ========================================
# PAYLOADCMS CORE
# ========================================
PAYLOAD_SECRET=your-payload-secret-key-here
PAYLOAD_PUBLIC_SERVER_URL=http://localhost:3000
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# ========================================
# AI INTEGRATION
# ========================================
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google Gemini (via proxy)
GEMINI_API_PROXY=https://your-proxy.vercel.app/api/gemini
GEMINI_API_KEY=your-gemini-api-key-here

# Claude (via proxy)
CLAUDE_API_PROXY=https://your-proxy.com/claude
CLAUDE_API_KEY=your-claude-api-key-here

# Ollama (local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Replicate (AI Image Generation)
REPLICATE_API_TOKEN=your-replicate-api-token-here

# ========================================
# IMAGE SERVICES
# ========================================
# Unsplash
UNSPLASH_ACCESS_KEY=your-unsplash-access-key-here
UNSPLASH_SECRET_KEY=your-unsplash-secret-key-here

# Pixabay
PIXABAY_API_KEY=your-pixabay-api-key-here

# Pexels
PEXELS_API_KEY=your-pexels-api-key-here

# ========================================
# CLOUD STORAGE (AWS S3)
# ========================================
S3_BUCKET=your-s3-bucket-name
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-s3-access-key-id
S3_SECRET_ACCESS_KEY=your-s3-secret-access-key

# ========================================
# CACHE & DATABASE
# ========================================
# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# ========================================
# MONITORING & LOGGING
# ========================================
# Sentry
SENTRY_DSN=https://your-sentry-dsn-here

# ========================================
# EMAIL & NOTIFICATIONS
# ========================================
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Twilio (SMS notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ========================================
# DEPLOYMENT & WEBHOOKS
# ========================================
# Vercel
VERCEL_WEBHOOK_URL=https://your-vercel-webhook-url.com/api/revalidate

# Netlify
NETLIFY_WEBHOOK_URL=https://your-netlify-webhook-url.com

# Custom Webhooks
WEBHOOK_URL=https://your-webhook-url.com
WEBHOOK_SECRET=your-webhook-secret

# ========================================
# FRONTEND INTEGRATION
# ========================================
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3000/admin

# ========================================
# CRON JOBS & SCHEDULING
# ========================================
# Bree.js Configuration
BREE_SECRET=your-bree-secret-key
BREE_WORKER_MESSAGE_HANDLERS=true

# ========================================
# RSS & SCRAPING
# ========================================
# RSS Feed Configuration
RSS_FETCH_INTERVAL=3600000 # 1 hour in milliseconds
RSS_MAX_ITEMS_PER_FEED=10

# Scraping Configuration
SCRAPER_USER_AGENT=Mozilla/5.0 (compatible; PayloadCMS-Bot/1.0)
SCRAPER_TIMEOUT=30000 # 30 seconds
SCRAPER_MAX_RETRIES=3

# ========================================
# SECURITY & RATE LIMITING
# ========================================
# Rate Limiting
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes

# CORS
CORS_ORIGIN=http://localhost:3000,https://yoursite.com

# ========================================
# DEVELOPMENT
# ========================================
NODE_ENV=development
DEBUG=payload:*
LOG_LEVEL=debug

# ========================================
# TESTING
# ========================================
# Jest Configuration
JEST_TIMEOUT=10000
TEST_DATABASE_URI=mongodb://localhost:27017/payload-test

# ========================================
# OPTIONAL INTEGRATIONS
# ========================================
# Google Analytics
GA_TRACKING_ID=GA-XXXXXXXXX-X

# Google Search Console
GOOGLE_SEARCH_CONSOLE_VERIFICATION=your-verification-code

# Facebook Pixel
FACEBOOK_PIXEL_ID=your-pixel-id

# ========================================
# BACKUP & EXPORT
# ========================================
# Backup Configuration
BACKUP_SCHEDULE=0 2 * * * # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# Export Configuration
EXPORT_FORMAT=json
EXPORT_INCLUDE_MEDIA=true
EXPORT_MAX_FILE_SIZE=10485760 # 10MB

# ========================================
# CUSTOM CONFIGURATIONS
# ========================================
# Custom API Keys (if needed)
CUSTOM_API_KEY=your-custom-api-key

# Custom Webhook Endpoints
CUSTOM_WEBHOOK_1=https://webhook1.com
CUSTOM_WEBHOOK_2=https://webhook2.com

# ========================================
# ENVIRONMENT SPECIFIC
# ========================================
# Production
# NODE_ENV=production
# PAYLOAD_PUBLIC_SERVER_URL=https://your-production-domain.com

# Staging
# NODE_ENV=staging
# PAYLOAD_PUBLIC_SERVER_URL=https://your-staging-domain.com

# Development
# NODE_ENV=development
# PAYLOAD_PUBLIC_SERVER_URL=http://localhost:3000