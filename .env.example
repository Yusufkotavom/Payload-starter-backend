# PayloadCMS Configuration
PAYLOAD_SECRET=your-secret-key-here
PAYLOAD_PUBLIC_SERVER_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/payloadcms-backend-otomatis

# AI Services Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here
REPLICATE_API_TOKEN=your-replicate-api-token-here

# Image Services Configuration
UNSPLASH_ACCESS_KEY=your-unsplash-access-key-here
PIXABAY_API_KEY=your-pixabay-api-key-here
PEXELS_API_KEY=your-pexels-api-key-here

# Monitoring Configuration (Optional)
SENTRY_DSN=your-sentry-dsn-here

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Twilio Configuration (Optional)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Frontend Configuration
FRONTEND_URL=http://localhost:4321
ADMIN_URL=http://localhost:3000/admin

# Development Configuration
NODE_ENV=development
PORT=3000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# File Upload Configuration
MAX_FILE_SIZE=5000000
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:4321
CSRF_ORIGINS=http://localhost:3000,http://localhost:4321

# Cron Jobs Configuration
ENABLE_CRON_JOBS=true
CRON_TIMEZONE=Asia/Jakarta

# Backup Configuration (Optional)
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7