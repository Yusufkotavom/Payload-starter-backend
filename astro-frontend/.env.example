# PayloadCMS Admin
PUBLIC_ADMIN_URL=http://localhost:3000/admin

# Analytics (Optional)
PUBLIC_GOOGLE_ANALYTICS_ID=
PUBLIC_FACEBOOK_PIXEL_ID=

# Social Media
PUBLIC_TWITTER_HANDLE=
PUBLIC_FACEBOOK_PAGE=
PUBLIC_INSTAGRAM_HANDLE=

# Contact Information
PUBLIC_CONTACT_EMAIL=
PUBLIC_CONTACT_PHONE=
